<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
		<section id="makarovsoft_directaddto" translate="label" type="text" sortOrder="110" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <label>Direct Add To Cart And Checkout</label>
            <tab>makarovsoft</tab>
            <resource>Makarovsoft_Directaddto::directaddto</resource>
            <group id="general" translate="label" type="text" sortOrder="500" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General</label>
                <field id="show_to_checkout" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Show "Proceed to Checkout" button at product view page?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="cart_redirect" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Redirect to Cart Overview after adding item to cart?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Select "No" to stay on the same page</comment>
                </field>
                <field id="checkout_url" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Custom Checkout URL</label>
                    <comment>Relative to store name i.e. firecheckout</comment>
                </field>
            </group>
        </section>
    </system>
</config>
